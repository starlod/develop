<VirtualHost *:80>
    DocumentRoot "<%= node["rails"]["path"] %>/public"
    ServerName <%= node["rails"]["servername"] %>
    RailsEnv <%= node["rails"]["railsenv"] %>
    ErrorLog <%= node["rails"]["path"] %>/log/error_log
    TransferLog <%= node["rails"]["path"] %>/log/access_log
    <Directory <%= node["rails"]["path"] %>/public>
        Require all granted
        AllowOverride All
        Options -MultiViews
    </Directory>
</VirtualHost>
